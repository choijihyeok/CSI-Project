<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/mainRelativeLayout"

        android:layout_width="fill_parent"

        android:layout_height="fill_parent"

        android:layout_weight="1"

        android:background="@android:color/black"

        android:paddingTop="1dip">

        <!--구글 맵으로 바꾸는 버튼만들기-->
        <!--현재 위치 버튼 -->

        <ImageButton
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:padding="0sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/current" />

        <Button
            android:id="@+id/chButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="54dp"
            android:layout_toStartOf="@+id/popup"
            android:onClick="clicked2"
            android:text="Change" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chButton"
            android:layout_alignBottom="@+id/chButton"
            android:layout_marginEnd="34dp"
            android:layout_toStartOf="@+id/chButton"
            android:text="AR" />

        <ImageButton
            android:id="@+id/popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:onClick="onPopupButtonClick"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu" />


    </RelativeLayout>

</LinearLayout>